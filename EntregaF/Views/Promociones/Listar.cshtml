@model List<Promociones>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Listar</h1>

<div class="card">
    <div class="card-header">
        Lista de promociones
    </div>
    <div class="card-body">
        <a asp-action="GuardarForm" asp-controller="Promociones" class="btn btn-success">Crear Nuevo</a>
        <hr />
        <table class="d-lg-table table-bordered">
            <thead>
                <tr>
                    <th>Codigo promocion</th>
                    <th>Nombre</th>
                    <th>Descuento</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.PROMOCIONES_COD</td>
                        <td>@item.NOMBRE</td>
                        <td>@item.DESCUENTO</td>
                        <td>
                            <a asp-action="Editar" asp-controller="Promociones" class="btn-primary btn-sm" asp-route-id="@item.PROMOCIONES_COD">Editar</a>
                            <a asp-action="Eliminar" asp-controller="Promociones" class="btn-primary btn-sm" asp-route-id="@item.PROMOCIONES_COD">Eliminar</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>