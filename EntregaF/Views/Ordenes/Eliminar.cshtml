@model Ordenes
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar</h1>

<div class="card">
    <div class="card-header">
        Eliminar informacion del ordenes
    </div>
    <div class="card-body">
        <form asp-action="Eliminar" asp-controller="Ordenes" method="post">
            <input asp-for="ORDENES_COD" type="hidden" class="form-control" />

            <div class="alert alert-danger" role="alert">
                ¿Desea eliminar la orden: @Html.DisplayTextFor(m => m.ORDENES_COD)?
            </div>

            <button type="submit" class="btn btn-primary" asp-action="Eliminar" asp-controller="Ordenes">Eliminar</button>
            <a asp-action="Listar" asp-controller="Ordenes" class="btn btn-warning">Volver al listado</a>
        </form>
    </div>
</div>
