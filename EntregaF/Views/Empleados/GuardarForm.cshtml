@model Empleados
@{
    ViewData["Title"] = "GuardarForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>GuardarForm</h1>
<form asp-action="GuardarForm" asp-controller="Empleados">
    <div class="mb-3">
        <label class="form-label">Apellido</label>
        <input asp-for="APELLIDO" type="text" class="form-control" />
        <span asp-validation-for="APELLIDO" class="text-denger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input asp-for="NOMBRE" type="text" class="form-control" />
        <span asp-validation-for="NOMBRE" class="text-denger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Tipo empleado</label>
        <input asp-for="TIPO_EMPLEADO" type="number" class="form-control" />
        <span asp-validation-for="TIPO_EMPLEADO" class="text-denger"></span>
    </div>
    <button type="submit" class="btn btn-primary" asp-action="GuardarForm" asp-controller="Empleados">Guardar</button>
    <a asp-action="Listar" asp-controller="Empleados" class="btn btn-warning">Volver al listado</a>
</form>
