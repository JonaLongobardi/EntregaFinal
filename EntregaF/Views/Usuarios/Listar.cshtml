@model List<Usuarios>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Listar</h1>

<div class="card">
    <div class="card-header">
        Lista de usuarios
    </div>
    <div class="card-body">
        <a asp-action="GuardarForm" asp-controller="Usuarios" class="btn btn-White link border-dark">Crear Nuevo</a>
        <hr />
        <table class="d-lg-table table-bordered">
            <thead>
                <tr>
                    <th>Codigo usuarios</th>
                    <th>Correo</th>
                    <th>Contraseña</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.USUARIOS_CODIGO</td>
                        <td>@item.CORREO</td>
                        <td>@item.CONTRASENIA</td>
                        <td>
                            <a asp-action="Editar" asp-controller="Usuarios" class="btn btn-White" asp-route-id="@item.USUARIOS_CODIGO">Editar</a>
                            <a asp-action="Eliminar" asp-controller="Usuarios" class="btn btn-danger" asp-route-id="@item.USUARIOS_CODIGO">Eliminar</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>