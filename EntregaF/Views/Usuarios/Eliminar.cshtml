@model Usuarios
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar</h1>

<div class="card">
    <div class="card-header">
        Eliminar informacion de usuario
    </div>
    <div class="card-body">
        <form asp-action="Eliminar" asp-controller="Usuarios" method="post">
            <input asp-for="USUARIOS_CODIGO" type="hidden" class="form-control" />

            <div class="alert alert-danger" role="alert">
                ¿Desea eliminar el usuario: @Html.DisplayTextFor(m => m.USUARIOS_CODIGO)?
            </div>

            <button type="submit" class="btn btn-primary">Eliminar</button>
            <a asp-action="Listar" asp-controller="Usuarios" class="btn btn-warning">Volver al listado</a>
        </form>
    </div>
</div>
