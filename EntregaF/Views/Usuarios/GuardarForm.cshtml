@model Usuarios
@{
    ViewData["Title"] = "GuardarForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>GuardarForm</h1>

<form>
    <div class="mb-3">
        <label class="form-label">Codigo usuario</label>
        <input asp-for="USUARIOS_CODIGO" type="number" class="form-control" />
        <span asp-validation-for="USUARIOS_CODIGO" class="text-denger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Codigo perfil</label>
        <input asp-for="PERFILES_CODIGO" type="number" class="form-control" />
        <span asp-validation-for="PERFILES_CODIGO" class="text-denger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Listar" asp-controller="Usuarios" class="btn btn-warning">Volver al listado</a>
</form>
