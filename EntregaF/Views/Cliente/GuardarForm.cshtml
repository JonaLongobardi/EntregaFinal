@model Clientes
@{
    ViewData["Title"] = "GuardarForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>GuardarForm</h1>
<form asp-action="Guardar cliente" asp-controller="Cliente">
    <div class="mb-3">
        <label class="form-label">CUIT</label>
        <input asp-for="CUIT_DNI" type="number" class="form-control" id="cuitDni"/>
        <span asp-validation-for="CUIT_DNI" class="text-denger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Tipo de cliente</label>
        <input asp-for="TIPO_CLIENTE" type="text" class="form-control" id="cuitDni"/>
        <span asp-validation-for="TIPO_CLIENTE" class="text-denger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Razon social</label>
        <input asp-for="RAZON_SOCIAL" type="text" class="form-control" id="cuitDni" />
        <span asp-validation-for="RAZON_SOCIAL" class="text-denger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input asp-for="NOMBRE" type="text" class="form-control" id="nombre"/>
        <span asp-validation-for="NOMBRE" class="text-denger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Apellido</label>
        <input asp-for="APELLIDO" type="text" class="form-control" id="apellido"/>
        <span asp-validation-for="APELLIDO" class="text-denger"></span>
    </div>
    
    <div class="mb-3">
        <label class="form-label">Usuario</label>
        <input asp-for="USUARIOS_CODIGO" type="number" class="form-control" id="apellido" />
        <span asp-validation-for="USUARIOS_CODIGO" class="text-denger"></span>
    </div>

    <button class=" btn btn-White link border-dark" asp-action="GuardarForm" asp-controller="Cliente">
        Guardar
    </button>
    <a asp-action="Listar" asp-controller="Cliente" class="btn btn-White link border-dark">Volver al listado</a>

</form>

