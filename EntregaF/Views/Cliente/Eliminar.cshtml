@model Clientes
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar</h1>

<div class="card">
    <div class="card-header">
        Eliminar informacion del cliente
    </div>
    <div class="card-body">
        <form asp-action="Eliminar" asp-controller="Cliente" method="post">
            <input asp-for="CLIENTES_COD" type="hidden" class="form-control" />

            <div class="alert alert-danger" role="alert">
                ¿Desea eliminar el contacto: @Html.DisplayTextFor(m => m.APELLIDO)?
            </div>

            <button type="submit" class="btn btn-primary">Eliminar</button>
            <a asp-action="Listar" asp-controller="Cliente" class="btn btn-warning">Volver al listado</a>
        </form>
    </div>
</div>
