@model List<Clientes>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Listar</h1>
<div class="card">
    <div class="card-header">
        Lista de clientes
    </div>
    <div class="card-body">
        <a asp-action="GuardarForm" asp-controller="Cliente" class="btn btn-success">Crear Nuevo</a>
        <hr />
        <table class="d-lg-table table-bordered">
            <thead>
                <tr>
                    <th>Codigo cliente</th>
                    <th>Tipo cliente</th>
                    <th>Razon social</th>
                    <th>CUIT</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Codigo usuario</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CLIENTES_COD</td>
                        <td>@item.TIPO_CLIENTE</td>
                        <td>@item.RAZON_SOCIAL</td>
                        <td>@item.CUIT_DNI</td>
                        <td>@item.NOMBRE</td>
                        <td>@item.APELLIDO</td>
                        <td>@item.USUARIOS_CODIGO</td>
                        <td>
                            <a asp-action="Editar" asp-controller="Cliente" class="btn-primary btn-sm" asp-route-id="@item.CLIENTES_COD">Editar</a>
                            <a asp-action="Eliminar" asp-controller="Cliente" class="btn-primary btn-sm" asp-route-id="@item.CLIENTES_COD">Eliminar</a>
                            
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

