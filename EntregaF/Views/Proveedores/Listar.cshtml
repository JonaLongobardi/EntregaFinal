@model List<Proveedores>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Listar</h1>

<div class="card">
    <div class="card-header">
        Lista de proveedores
    </div>
    <div class="card-body">
        <a asp-action="GuardarForm" asp-controller="Proveedores" class="btn btn-success">Crear Nuevo</a>
        <hr />
        <table class="d-lg-table table-bordered">
            <thead>
                <tr>
                    <th>Codigo proveedor</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Cuit</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                        <tr>
                            <td>@item.PROVEEDORES_COD</td>
                            <td>@item.NOMBRE</td>
                            <td>@item.APELLIDO</td>
                            <td>@item.CUIT</td>
                            <td>
                            <a asp-action="Editar" asp-controller="Proveedores" class="btn-primary btn-sm" asp-route-id="@item.PROVEEDORES_COD">Editar</a>
                            <a asp-action="Eliminar" asp-controller="Proveedores" class="btn-primary btn-sm" asp-route-id="@item.PROVEEDORES_COD">Eliminar</a>

                            </td>
                        </tr>
                }
            </tbody>
        </table>
    </div>
</div>