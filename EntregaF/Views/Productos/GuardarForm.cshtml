@model Productos
@{
    ViewData["Title"] = "GuardarForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>GuardarForm</h1>

<form asp-action="GuardarForm" asp-controller="Productos">
    
    <div class="mb-3">
        <label class="form-label">Codigo de proveedor</label>
        <input asp-for="PROVEEDORES_COD" type="numbre" class="form-control" />
        <span asp-validation-for="PROVEEDORES_COD" class="text-denger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input asp-for="NOMBRE" type="text" class="form-control" />
        <span asp-validation-for="NOMBRE" class="text-denger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Precio</label>
        <input asp-for="PRECIO" type="number" class="form-control" />
        <span asp-validation-for="PRECIO" class="text-denger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Stock</label>
        <input asp-for="STOCK" type="number" class="form-control" />
        <span asp-validation-for="STOCK" class="text-denger"></span>
    </div>
    <button type="submit" class="btn btn-primary" asp-action="GuardarForm" asp-controller="Productos">Guardar</button>
    <a asp-action="Listar" asp-controller="Productos" class="btn btn-warning">Volver al listado</a>
</form>
