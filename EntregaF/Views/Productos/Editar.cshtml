@model Productos
@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar</h1>

<div class="card">
    <div class="card-header">
        Editar informacion de productos
    </div>
    <div class="card-body">
        <form asp-action="Editar" asp-controller="Productos" method="post"></form>
        <input asp-for="PRODUCTOS_COD" type="hidden" class="form-control" />

        <div class="mb-3">
            <label class="form-label">Codigo producto</label>
            <input asp-for="PRODUCTOS_COD" type="number" class="form-control" />
            <span asp-validation-for="PRODUCTOS_COD" class="text-denger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Codigo de proveedores</label>
            <input asp-for="PROVEEDORES_COD" type="number" class="form-control" />
            <span asp-validation-for="PROVEEDORES_COD" class="text-denger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Nombre</label>
            <input asp-for="NOMBRE" type="text" class="form-control" />
            <span asp-validation-for="NOMBRE" class="text-denger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Precio</label>
            <input asp-for="PRECIO" type="number" class="form-control" />
            <span asp-validation-for="PRECIO" class="text-denger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Stock</label>
            <input asp-for="STOCK" type="number" class="form-control" />
            <span asp-validation-for="STOCK" class="text-denger"></span>
        </div>
        <div>
            <button type="submit" class="btn btn-primary">Editar</button>
            <a asp-action="Listar" asp-controller="Productos" class="btn btn-warning">Volver al listado</a>
        </div>
    </div>
</div>
